<!doctype html>
<html lang="ES">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        .separador {
            margin-top: 50px;
            margin-bottom: 50px;
        }
    </style>

</head>


<body>
    <div class="container">
        <div class="row " style="background-color:black">

            <div class="col-md-4" style="color: white">
                <h3> Entrenador </h3>
            </div>

            <div class="col-md-4" style="text-align:center">
                <span style="color: white; font-size: 18pt ; align-content: center">
                    <%= usuario%>
                </span>
            </div>

            <div class="col-md-4" style="text-align:right">
                <a href="login">
                    <button type="submit" class="btn btn-danger">Salir</button>
                </a>
                </form>
            </div>
        </div>
        <div class="separador"></div>

        <div class="col-sm-12">
            <form action="/examen/entrenador/buscar" class="form-horizontal" method="post">
                <div class="form-group row">
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="busquedaId" placeholder="Busqueda" name="busqueda">
                    </div>

                    <div class="col-sm-2 text-right"><button type="submit"
                            class="btn btn-sm btn-primary">Buscar</button>
                    </div>
                    <div class="form-group row text-right">
                            <div class="col-sm-12">
                                <a href="http://localhost:3000/examen/entrenador/crear">
                                    <button type="button" class="btn btn-sm btn-primary">Crear</button>
                                </a>
        
                            </div>
                        </div>
                </div>
            </form>

        </div>


        <div class="row text-center">
            <div class="col-sm-12">
                <table class="table table-md table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Fecha Apertura</th>
                            <th>Numero de Medalla</th>
                            <th>Campeon Actual</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% listaEntrenador.forEach((entrenador)=>{ %>
                        <tr>
                            <td><%= entrenador.nombres %></td>
                            <td><%= entrenador.apellidos %></td>
                            <td><%= entrenador.fechaNacimiento %></td>
                            <td><%= entrenador.numeroMedalla %></td>
                            <td><%if(entrenador.campeonActual){%>
                                <input type="checkbox" checked disabled>
                                <%}else{%>
                                <input type="checkbox" disabled>
                                <%}%>
                        </td>
                        <td>
                            <form action="/examen/entrenador/eliminar" method="post">
                                <input type="text" name="entrenadorId" hidden value="<%=entrenador.entrenadorId%> ">
                                <button type="submit" class="btn btn-xs btn-info">Borrar</button>
                                <br>
                                <br>
                                <a href="http://localhost:3000/examen/entrenador/gestion/<%=entrenador.entrenadorId%>">
                                    <button type="button" class="btn btn-xs btn-info">Gestionar Pokemons</button>
                                </a>
                                </form>
                            </td>
                        </tr>
                        <% })%>
                    </tbody>
                </table>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <a href="http://localhost:3000/examen/inicio" class="btn btn-sm btn-primary"
                        role="button">Atras</a>
                </div>
            </div>

        </div>
    </div>

</body>

</html>